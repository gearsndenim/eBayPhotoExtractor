{
  "manifest_version": 3,
  "name": "eBay Photo Extractor",
  "version": "1.0.4",
  "description": "Extract and download all photos from eBay listings",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.ebay.com/*",
    "https://*.ebay.co.uk/*",
    "https://*.ebay.de/*",
    "https://*.ebay.fr/*",
    "https://*.ebay.it/*",
    "https://*.ebay.es/*",
    "https://*.ebay.ca/*",
    "https://*.ebay.com.au/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.ebay.com/*",
        "https://*.ebay.co.uk/*",
        "https://*.ebay.de/*",
        "https://*.ebay.fr/*",
        "https://*.ebay.it/*",
        "https://*.ebay.es/*",
        "https://*.ebay.ca/*",
        "https://*.ebay.com.au/*"
      ],
      "js": ["content.js"]
    }
  ]
}
